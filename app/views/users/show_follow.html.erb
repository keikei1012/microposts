<div class="row">
  <aside class="col-md-4">
    <%= render 'user_info' %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @users.any? %>
      <h3><%= @title %> (<%= @users.count %>)</h3>
      <ol class="users">
        <% @users.each do |user| %>
          <li>
            <%= link_to(gravatar_for(user, size: 50), user) %>
            <span class="user"><%= link_to user.name, user %></span>
          </li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>